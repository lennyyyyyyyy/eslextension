{
    "manifest_version": 3,
    "name": "ESL Helper",
    "description": "Learn English anytime",
    "version": "1.0",
    "action": {
        "default_popup": "main.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ]
}